{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"        
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "overrides": [
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        // suppress errors for missing 'import React' in files
        // do "off, warning, error" or "0, 1, 2".
        "react/react-in-jsx-scope": "off",
        "indent": ["error", 2],
        "linebreak-style": ["error","unix"],
        "quotes": ["error", "double"],
        "semi": ["error", "never"],
        // you can disable this kind of warnings by adding
        "react/no-unescaped-entities": 0 ,
        // disable project-wide in your eslintrc:
        "react/prop-types": "off"

    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
